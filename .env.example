# ===========================================
# 🔐 环境变量配置文件
# ===========================================
# 注意：请复制此文件为 .env.local 并填入真实配置值
# .env.local 文件不会被提交到版本控制系统

# ===========================================
# 📧 邮件服务配置
# ===========================================
# 选择邮件服务类型: smtp | sendgrid | resend
EMAIL_SERVICE=smtp

# SMTP配置 (推荐使用QQ邮箱或163邮箱)
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@qq.com
SMTP_PASS=your-email-auth-code

# SendGrid配置 (可选)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Resend配置 (可选)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# 🤖 LLM API配置 - 多平台支持
# ===========================================
# 主要LLM服务 (Suanli.cn - Qwen3)
LLM_PRIMARY_ENDPOINT=https://api.suanli.cn/v1
LLM_PRIMARY_API_KEY=your-primary-llm-api-key-here
LLM_PRIMARY_MODEL=free:Qwen3-30B-A3B

# 备用LLM服务 (DeepSeek)
LLM_BACKUP_ENDPOINT=https://api.deepseek.com
LLM_BACKUP_API_KEY=your-backup-llm-api-key-here
LLM_BACKUP_MODEL=deepseek-chat

# LLM通用配置
LLM_TIMEOUT=30000
LLM_MAX_RETRIES=2
LLM_ENABLE_FALLBACK=true

# ===========================================
# 🔧 应用程序配置
# ===========================================
# 应用程序名称
APP_NAME=CRS Check 问卷系统
# 应用程序版本
APP_VERSION=1.0.0
# 应用程序环境 (development | production)
NODE_ENV=development

# ===========================================
# 🗄️ 数据库配置 (如果需要)
# ===========================================
# 数据库URL (可选，当前使用文件存储)
# DATABASE_URL=your-database-url

# ===========================================
# 🔒 安全配置
# ===========================================
# JWT密钥 (用于用户认证)
JWT_SECRET=your-jwt-secret-key
# 会话密钥
SESSION_SECRET=your-session-secret-key

# ===========================================
# 📊 分析和监控配置 (可选)
# ===========================================
# Google Analytics ID (可选)
# NEXT_PUBLIC_GA_ID=your-ga-id
# Sentry DSN (可选)
# SENTRY_DSN=your-sentry-dsn
